<!-- view for editing plants already in collection -->
<%- include('partials/header') -%>

<!-- ---------------------------------------------------------------------------------- -->
<div class="container-md">
    <div class="row justify-content-center my-2">
        <div class="col-lg-11">

                <!-- -------------- form---------------- -->
                <form action="/plant/edit-plant/<%= plant.id %>" enctype="multipart/form-data" method="POST">

                    <!-- <div class="mb-3">
                        <label for="imgUpload" class="form-label">Image:</label>
                        <input type="file" class="form-control" id="imageUpload" name="file">
                    </div> -->

                    <div class="row mt-4 mx-1">
                        <div>
                            <h5 class="title-font-op text-uppercase mb-0">Edit Plant Details</h5>
                        </div>
                    </div>

                    <!-- ------- -->
                    <div class="row border-bottom border-1 p-0 m-0" style="height: 10px;"></div>
                    <!-- ------- -->

                    <div class="row gy-2 gx-3 mt-3 mb-4 mx-1">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <!-- image -->
                                <div class="image-card card img-fluid border-light">
                                    <img src="<%= plant.image %>" class="card-img plot-image" alt="Plant Image">
                                    <div class="d-flex align-items-end card-img-overlay p-0">
                                        <div class="d-flex justify-content-between row head-overlay-plant">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- plant name -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="nameCommon" name="plantName" value="<%= plant.nameCommon %>" placeholder="plant name">
                                <label for="plantName">Plant Name<span class="req-prop ps-1">*</span></label>
                            </div>
                            <!-- SCI -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="nameSCI" name="plantNameSCI" value="<%= plant.nameSCI %>" placeholder="scientific name">
                                <label for="plantNameSCI">Scientific Name</label>
                            </div>

                        </div>
                    </div>

                    <div class="row gy-2 gx-3 my-4 mx-1">
                        <!-- light -->
                        <div class="col-lg-4">
                            <div>
                                <label for="light">Sun Exposure</label>
                            </div>
                            <div class="input-group">
                                <div class="input-group-text text-white" for="light"><i class="fas fa-sun fa-lg"></i></div>
                                    <select class="form-select h-100" id="light" name="light" value="<%= plant.light %>" aria-label="Sun exposure select">
                                        <option value="<%= plant.light %>" selected > <%= plant.light %> </option>
                                        <option value="Full-Shade">Full-Shade</option>
                                        <option value="Shade-Partial">Full-Shade to Part-Sun</option>
                                        <option value="Sun-Partial">Full-Sun to Part-Shade</option>
                                        <option value="Full-Sun">Full-Sun</option>
                                        <option value="Sun/Shade">Sun to Shade</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                            </div>
                        </div>
                        <!-- water -->
                        <div class="col-lg-4">
                            <div>
                                <label for="water">Water Needs</label>
                            </div>
                            <div class="input-group">
                                <div class="input-group-text text-white" for="water"><i class="fas fa-tint fa-lg"></i></div>
                                    <select class="form-select h-100" id="water" name="water" value="<%= plant.water %>" aria-label="Water needs select">
                                        <option value="<%= plant.water %>" selected > <%= plant.water %> </option>
                                        <option value="Wet/Keep-Moist">Wet/Keep-Moist</option>
                                        <option value="Average">Average</option>
                                        <option value="Drought-Tolerant">Drought-Tolerant</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                            </div>
                        </div>
                        <!-- soil -->
                        <div class="col-lg-4">
                            <div>
                                <label for="soil">Soil Preference</label>
                            </div>
                            <div class="input-group">
                                <div class="input-group-text text-white" for="soil"><i class="fas fa-ellipsis-v fa-lg"></i></div>
                                    <select class="form-select h-100" id="soil" name="soil" aria-label="Soil select">
                                        <option value="<%= plant.soil %>" selected> <%= plant.soil %> </option>
                                        <option value="Average-Soil">Average-Soil</option>
                                        <option value="Well-Drained">Well-Drained</option>
                                        <option value="Rich/Loam">Rich/Loam</option>
                                        <option value="Clay">Clay</option>
                                        <option value="Sandy">Sandy</option>
                                        <option value="Rocky">Rocky</option>
                                    </select>
                                </div>
                        </div>
                    </div>

        
                    <!-- ------- -->
                    <div class="row border-bottom border-1 p-0 m-0" style="height: 10px;"></div>
                    <!-- ------- -->
        
                    <div class="row my-3 mx-1">
                        <div class="col-sm-6">
                            <!-- height -->
                            <div class="row gx-3 mb-3">
                                <div class="col-lg-4">
                                    <span>Growth Height <i class="fas fa-arrows-alt-v fa-sm"></i></span>
                                </div>
                                <div class="col-lg-2 col-4">
                                    <input type="text" class="form-control" id="minHeight" name="minHeight" value="<%= plant.height.min %>" placeholder="min">
                                </div>
                                <div class="col-lg-2 col-4">
                                    <input type="text" class="form-control" id="maxHeight" name="maxHeight" value="<%= plant.height.max %>" placeholder="max">
                                </div>
                                <div class="col-3">
                                    <select class="form-select h-100" id=heightInc name="heightInc">
                                        <option value="<%= plant.height.inc %>" selected > <%= plant.height.inc %> </option>
                                        <option value="in">in</option>
                                        <option value="cm">cm</option>
                                    </select>
                                </div>
                            </div>
                            <!-- spread -->
                            <div class="row gx-3 mb-3">
                                <div class="col-lg-4">
                                    <span>Spread <i class="fas fa-arrows-alt-h fa-sm"></i></span>
                                </div>
                                <div class="col-lg-2 col-4">
                                    <input type="text" class="form-control" id="minSpread" name="minSpread" value="<%= plant.spread.min %>" placeholder="min">
                                </div>
                                <div class="col-lg-2 col-4">
                                    <input type="text" class="form-control" id="maxSpread" name="maxSpread" value="<%= plant.spread.max %>" placeholder="max">
                                </div>
                                <div class="col-3">
                                    <select class="form-select h-100" id=spreadInc name="spreadInc">
                                        <option value="<%= plant.spread.inc %>" selected > <%= plant.spread.inc %> </option>
                                        <option value="in">in</option>
                                        <option value="cm">cm</option>
                                    </select>
                                </div>
                            </div>
                            <!-- origin -->
                            <div class="row mb-3">
                                <div class="col-lg-11">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="nativeOrigin" name="nativeOrigin" value="<%= plant.nativeOrigin %>" placeholder="origin">
                                        <label for="nativeOrigin">Native Origin</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                                            
                        <div class="col-sm-6">
                            <!-- zone -->
                            <div class="row gx-3 mb-3">
                                <div>
                                    <span>USDA Hardiness Zone</span>
                                </div>
                                <div class="col-5">
                                    <select class="form-select h-100" id="zoneMin" name="zoneMin">
                                        <option value="<%= plant.zone.min %>" selected><%= plant.zone.min %></option>
                                        <option value="1a">1a</option>
                                        <option value="1b">1b</option>
                                        <option value="2a">2a</option>
                                        <option value="2b">2b</option>
                                        <option value="3a">3a</option>
                                        <option value="3b">3b</option>
                                        <option value="4a">4a</option>
                                        <option value="4b">4b</option>
                                        <option value="5a">5a</option>
                                        <option value="5b">5b</option>
                                        <option value="6a">6a</option>
                                        <option value="6b">6b</option>
                                        <option value="7a">7a</option>
                                        <option value="7b">7b</option>
                                        <option value="8a">8a</option>
                                        <option value="8b">8b</option>
                                        <option value="9a">9a</option>
                                        <option value="9b">9b</option>
                                        <option value="10a">10a</option>
                                        <option value="10b">10b</option>
                                        <option value="11a">11a</option>
                                        <option value="11b">11b</option>
                                        <option value="12a">12a</option>
                                        <option value="12b">12b</option>
                                        <option value="13a">13a</option>
                                        <option value="13b">13b</option>
                                    </select>
                                </div>
                                <div class="col text-center">
                                    <span>to</span>
                                </div>
                                <div class="col-5">
                                    <select class="form-select h-100" id="zoneMax" name="zoneMax">
                                        <option value="<%= plant.zone.max %>" selected><%= plant.zone.max %></option>
                                        <option value="1a">1a</option>
                                        <option value="1b">1b</option>
                                        <option value="2a">2a</option>
                                        <option value="2b">2b</option>
                                        <option value="3a">3a</option>
                                        <option value="3b">3b</option>
                                        <option value="4a">4a</option>
                                        <option value="4b">4b</option>
                                        <option value="5a">5a</option>
                                        <option value="5b">5b</option>
                                        <option value="6a">6a</option>
                                        <option value="6b">6b</option>
                                        <option value="7a">7a</option>
                                        <option value="7b">7b</option>
                                        <option value="8a">8a</option>
                                        <option value="8b">8b</option>
                                        <option value="9a">9a</option>
                                        <option value="9b">9b</option>
                                        <option value="10a">10a</option>
                                        <option value="10b">10b</option>
                                        <option value="11a">11a</option>
                                        <option value="11b">11b</option>
                                        <option value="12a">12a</option>
                                        <option value="12b">12b</option>
                                        <option value="13a">13a</option>
                                        <option value="13b">13b</option>
                                    </select>
                                </div>
                            </div>
                            <!-- bloom -->
                            <div class="row gx-3 mb-3">
                                <div>
                                    <label for="bloomSeason">Bloom Season</label>
                                </div>
                                <div class="col-5">
                                    <select class="form-select h-100" id="seasonStart" name="seasonStart" aria-label="Season start select">
                                        <option value="<%= plant.bloomSeason.start %>" selected> <%= plant.bloomSeason.start %> </option>
                                        <option value="March">March</option>
                                        <option value="April">April</option>
                                        <option value="May">May</option>
                                        <option value="June">June</option>
                                        <option value="July">July</option>
                                        <option value="August">August</option>
                                        <option value="September">September</option>
                                        <option value="October">October</option>
                                        <option value="November">November</option>
                                        <option value="Spring">Spring</option>
                                        <option value="Early-Spring">Early-Spring</option>
                                        <option value="Mid-Spring">Mid-Spring</option>
                                        <option value="Late-Spring">Late-Spring</option>
                                        <option value="Summer">Summer</option>
                                        <option value="Early-Summer">Early-Summer</option>
                                        <option value="Mid-Summer">Mid-Summer</option>
                                        <option value="Late-Summer">Late-Summer</option>
                                        <option value="Early-Fall">Early-Fall</option>
                                        <option value="Fall">Fall</option>
                                        <option value="Late-Fall">Late-Fall</option>
                                        <option value="Year-Round">Year-Round</option>
                                    </select>
                                </div>
                                <div class="col text-center">
                                    <span>to</span>
                                </div>
                                <div class="col-5">
                                    <select class="form-select h-100" id="seasonEnd" name="seasonEnd" aria-label="Season end select">
                                        <option value="<%= plant.bloomSeason.end %>" selected> <%= plant.bloomSeason.end %> </option>
                                        <option value="March">March</option>
                                        <option value="April">April</option>
                                        <option value="May">May</option>
                                        <option value="June">June</option>
                                        <option value="July">July</option>
                                        <option value="August">August</option>
                                        <option value="September">September</option>
                                        <option value="October">October</option>
                                        <option value="November">November</option>
                                        <option value="Spring">Spring</option>
                                        <option value="Early-Spring">Early-Spring</option>
                                        <option value="Mid-Spring">Mid-Spring</option>
                                        <option value="Late-Spring">Late-Spring</option>
                                        <option value="Summer">Summer</option>
                                        <option value="Early-Summer">Early-Summer</option>
                                        <option value="Mid-Summer">Mid-Summer</option>
                                        <option value="Late-Summer">Late-Summer</option>
                                        <option value="Early-Fall">Early-Fall</option>
                                        <option value="Fall">Fall</option>
                                        <option value="Late-Fall">Late-Fall</option>
                                        <option value="Year-Round">Year-Round</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ------- -->
                    <div class="row border-bottom border-1 p-0 m-0" style="height: 10px;"></div>
                    <!-- ------- -->

                    <div class="row justify-content-between my-3 mx-1">
                        <div class="col-md-6">
                            <!-- status -->
                            <div>
                                <label for="plantedStatus" class="form-label">Planting Status</label>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-text text-white" for="plantedStatus"><i class="fas fa-check fa-lg"></i></div>
                                <select class="form-select" id=plantedStatus name="plantedStatus" aria-label="Planting status select">
                                    <option value="<%= plant.planted.status %>" selected> <%= plant.planted.status %> </option>
                                    <option value="To-Plant">To-Plant</option>
                                    <option value="Planted">Planted</option>
                                </select>
                            </div>
                            <!-- current health -->
                            <div>
                                <label for="health" class="form-label">Current Health</label>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-text text-white" for="health"><i class="fas fa-smile fa-lg"></i><br><i class="fas fa-sad-tear fa-lg"></i></div>
                                <select class="form-select" id=health name="health">
                                    <option value="<%= plant.health %>" selected> <%= plant.health %> </option>
                                    <option value="Active">Active</option>
                                    <option value="Thriving">Thriving</option>
                                    <option value="Failed">Failed</option>
                                </select>
                            </div>
                            <!-- notes -->
                            <div>
                                <label for="notes" class="form-label">Notes</label>
                            </div>
                            <div class="input-group mb-3">  
                                <span class="input-group-text text-white"><i class="fas fa-pencil-alt fa-lg"></i></span>
                                <textarea class="form-control" id=notes name="notes" rows="3"><%= plant.notes %></textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- year planted -->
                            <label for="yearPlanted" class="form-label">Year Planted</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text text-white"><i class="far fa-calendar-alt fa-lg"></i></span>
                                <input type="number" class="form-control" id="yearPlanted" name="yearPlanted" min="2010" max="2099" step="1" value="<%= Number(plant.planted.year) %>" aria-label="Year planted" />
                                <select class="form-select" id="seasonPlanted" name="seasonPlanted">
                                    <option value="<%= plant.planted.season %>" selected><%= plant.planted.season %></option>
                                    <option value="Spring">Spring</option>
                                    <option value="Summer">Summer</option>
                                    <option value="Fall">Fall</option>
                                </select>
                            </div>
                            <!-- number of plants -->
                            <label for="numPlanted" class="form-label">Number of Plants</label>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text text-white"><i class="fas fa-seedling"></i><i class="fas fa-seedling"></i></span>
                                    <input type="number" class="form-control" id="numPlanted" name="numPlanted" value="<%= plant.numPlanted %>" min="0" placeholder="0">
                                </div>
                            </div>
                            <div class="col">
                                <!-- pests -->
                                <label for="pests" class="form-label">Known Pests/Diseases</label>
                                <div class="input-group">
                                    <span class="input-group-text text-white"><i class="fas fa-bug fa-lg"></i> <i class="fas fa-viruses fa-lg"></i></span>
                                    <textarea class="form-control" id=pests name="pests" rows="3"><%= plant.pests %></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- ------- -->
                    <div class="row border-bottom border-1 p-0 m-0 mb-5" style="height: 10px;"></div>
                    <!-- ------- -->

                    

                    <div class="mt-3">
                        <!-- save/close -->
                        <button class="btn btn-primary" type="submit" value="Upload">Save Changes</button>
                        <!-- <button type="reset" class="btn cancel" onclick="closeForm()">Close</button> -->
                        <a href="/plant/<%= plant.id %>" class="btn btn-secondary" role="button" >
                        Cancel
                        </a>
                    </div>
        
                </form>
                <!-- -----------------form end---------------- -->
            
        </div>
    </div>
</div>



<%- include('partials/footer') -%>