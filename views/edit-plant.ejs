<!-- view for editing plants already in collection -->
<%- include('partials/header') -%>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-6">
            <h2><%= plant.nameCommon %></h2>
            <img class="img-fluid" src="<%= plant.image%>" />
        </div>
    </div>

    <div class="col-3 mt-5">
        <form action="/plant/edit-plant/<%= plant.id %>" enctype="multipart/form-data" method="POST">

            <div class="mb-3">
                <label for="plantName" class="form-label">Plant Name:</label>
                <input type="text" class="form-control" id="nameCommon" name="plantName" value="<%= plant.nameCommon %>">
            </div>

            <div class="mb-3">
                <label for="plantNameSCI" class="form-label">Scientific Name:</label>
                <input type="text" class="form-control" id="nameSCI" name="plantNameSCI" value="<%= plant.nameSCI %>">
            </div>

            <!-- <div class="mb-3">
                <label for="imgUpload" class="form-label">Image:</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
            </div> -->

            <div class="mb-3">
                <label for="light" class="form-label">Sun Exposure:</label>
                <select id="light" name="light" >
                    <option value=" <%= plant.light %> " selected > <%= plant.light %> </option>
                    <option value="Full-Shade">Full-Shade</option>
                    <option value="Shade-Partial">Full-Shade to Part-Sun</option>
                    <option value="Sun-Partial">Full-Sun to Part-Shade</option>
                    <option value="Full-Sun">Full-Sun</option>
                    <option value="Sun-Shade">Sun to Shade</option>
                    <option value="N/A">N/A</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="soil" class="form-label">Soil:</label>
                <select id="soil" name="soil" >
                    <option value=" <%= plant.soil %> " selected> <%= plant.soil %> </option>
                    <option value="Moist-Soil">Moist-Soil</option>
                    <option value="Average-Soil">Average-Soil</option>
                    <option value="Well-Drained">Well-Drained</option>
                    <option value="Drought-Tolerant">Drought-Tolerant</option>
                    <option value="N/A">N/A</option>
                </select>
            </div>

            <div>
                <label for="minHeight" class="form-label">Growth Height: </label>
                <input type="text" class="form-control" id="minHeight" name="minHeight" value=" <%= (plant.height).split(" ")[0] %> ">
                <input type="text" class="form-control" id="maxHeight" name="maxHeight" value=" <%= (plant.height).split(" ")[2] %> ">
                <select id=heightInc name="heightInc">
                    <option value=" <%= (plant.height).split(" ")[3] %> " selected > <%= (plant.height).split(" ")[3] %> </option>
                    <option value="in">in</option>
                    <option value="cm">cm</option>
                    <option value=" ">N/A</option>
                </select>
            </div>

            <div>
                <label for="spread" class="form-label">Spread:</label>
                <input type="text" class="form-control" id="minSpread" name="minSpread" value=" <%= (plant.spread).split(" ")[0] %> ">
                <input type="text" class="form-control" id="maxSpread" name="maxSpread" value=" <%= (plant.spread).split(" ")[2] %> ">
                <select id=spreadInc name="spreadInc">
                    <option value=" <%= (plant.spread).split(" ")[3] %> " selected > <%= (plant.spread).split(" ")[3] %> </option>
                    <option value="in">in</option>
                    <option value="cm">cm</option>
                    <option value=" ">N/A</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="zoneMin" class="form-label"><a href="https://planthardiness.ars.usda.gov/PHZMWeb/" target="_blank">USDA Hardiness Zone:</a></label>
                <select id="zoneMin" name="zoneMin">
                    <option value="<%= plant.zoneMin %>" selected><%= plant.zoneMin %></option>
                    <option value="1a">1a</option>
                    <option value="1b">1b</option>
                    <option value="2a">2a</option>
                    <option value="2b">2b</option>
                    <option value="3a">3a</option>
                    <option value="3b">3b</option>
                    <option value="4a">4a</option>
                    <option value="4b">4b</option>
                    <option value="5a">5a</option>
                    <option value="5b">5b</option>
                    <option value="6a">6a</option>
                    <option value="6b">6b</option>
                    <option value="7a">7a</option>
                    <option value="7b">7b</option>
                    <option value="8a">8a</option>
                    <option value="8b">8b</option>
                    <option value="9a">9a</option>
                    <option value="9b">9b</option>
                    <option value="10a">10a</option>
                    <option value="10b">10b</option>
                    <option value="11a">11a</option>
                    <option value="11b">11b</option>
                    <option value="12a">12a</option>
                    <option value="12b">12b</option>
                    <option value="13a">13a</option>
                    <option value="13b">13b</option>
                    <option value="N/A">N/A</option>
                </select>
                <span>to</span>
                <select id="zoneMax" name="zoneMax">
                    <option value="<%= plant.zoneMax %>" selected><%= plant.zoneMax %></option>
                    <option value="1a">1a</option>
                    <option value="1b">1b</option>
                    <option value="2a">2a</option>
                    <option value="2b">2b</option>
                    <option value="3a">3a</option>
                    <option value="3b">3b</option>
                    <option value="4a">4a</option>
                    <option value="4b">4b</option>
                    <option value="5a">5a</option>
                    <option value="5b">5b</option>
                    <option value="6a">6a</option>
                    <option value="6b">6b</option>
                    <option value="7a">7a</option>
                    <option value="7b">7b</option>
                    <option value="8a">8a</option>
                    <option value="8b">8b</option>
                    <option value="9a">9a</option>
                    <option value="9b">9b</option>
                    <option value="10a">10a</option>
                    <option value="10b">10b</option>
                    <option value="11a">11a</option>
                    <option value="11b">11b</option>
                    <option value="12a">12a</option>
                    <option value="12b">12b</option>
                    <option value="13a">13a</option>
                    <option value="13b">13b</option>
                    <option value="N/A">N/A</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="bloomSeason" class="form-label"></label>Bloom Season:</label>
                <select id="seasonStart" name="seasonStart">
                    <option value=" <%=(plant.bloomSeason).split(" ")[0]%> " selected> <%= (plant.bloomSeason).split(" ")[0] %> </option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="November">November</option>
                    <option value="Spring">Spring</option>
                    <option value="Early-Spring">Early-Spring</option>
                    <option value="Mid-Spring">Mid-Spring</option>
                    <option value="Late-Spring">Late-Spring</option>
                    <option value="Summer">Summer</option>
                    <option value="Early-Summer">Early-Summer</option>
                    <option value="Mid-Summer">Mid-Summer</option>
                    <option value="Late-Summer">Late-Summer</option>
                    <option value="Early-Fall">Early-Fall</option>
                    <option value="Fall">Fall</option>
                    <option value="Late-Fall">Late-Fall</option>
                    <option value="Year-Round">Year-Round</option>
                </select>
                <span>to</span>
                <select id="seasonEnd" name="seasonEnd">
                    <option value="<%= (plant.bloomSeason).split(" ")[2] %> " selected> <%= (plant.bloomSeason).split(" ")[2] %> </option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="November">November</option>
                    <option value="Spring">Spring</option>
                    <option value="Early-Spring">Early-Spring</option>
                    <option value="Mid-Spring">Mid-Spring</option>
                    <option value="Late-Spring">Late-Spring</option>
                    <option value="Summer">Summer</option>
                    <option value="Early-Summer">Early-Summer</option>
                    <option value="Mid-Summer">Mid-Summer</option>
                    <option value="Late-Summer">Late-Summer</option>
                    <option value="Early-Fall">Early-Fall</option>
                    <option value="Fall">Fall</option>
                    <option value="Late-Fall">Late-Fall</option>
                    <option value="Year-Round">Year-Round</option>
                </select>
            </div>

            <div>
                <label for="nativeOrigin" class="form-label">Native Origin:</label>
                <input type="text" class="form-control" id="nativeOrigin" name="nativeOrigin" value="<%= plant.nativeOrigin %>">
            </div>

            <div>
                <label for="status" class="form-label">Planting Status:</label>
                <select id=status name="status">
                    <option value=" <%= plant.status %> " selected> <%= plant.status %> </option>
                    <option value="To-Plant">To-Plant</option>
                    <option value="Planted">Planted</option>
                </select>
            </div>

            <div>
                <label for="yearPlanted" class="form-label">Year Planted:</label>
                <input type="number" id="yearPlanted" name="yearPlanted" min="1900" max="2099" step="1" value="<%= plant.yearPlanted %>" />
            </div>

            <div>
                <label for="numPlanted" class="form-label">Number of Plants:</label>
                <input type="number" class="form-control" id="numPlanted" name="numPlanted" value="<%= plant.numPlanted %>">
            </div>

            <div>
                <label for="health" class="form-label">Current Health:</label>
                <select id=health name="health">
                    <option value=" <%= plant.health %> " selected> <%= plant.health %> </option>
                    <option value="Active">Active</option>
                    <option value="Thriving">Thriving</option>
                    <option value="Failed">Failed</option>
                </select>
            </div>

            <div>
                <label for="notes" class="form-label">Notes:</label>
                <textarea id=notes name="notes" value="<%= plant.notes %>"></textarea>
            </div>

            <button type="submit" class="btn" value="Upload"><span style="font-size: 1.5rem"><i class="fas fa-recycle"></i></span><span>Update Plant Details</span></button>

        </form>
        
    </div>

</div>

<%- include('partials/footer') -%>