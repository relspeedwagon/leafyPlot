<%- include('partials/index-header') -%>
<div class="container-fluid mx-0 px-0">
    <div class="d-flex flex-column index-headline px-0">
        <h1 class="text-center text-capitalize text-color-primary fw-bold">Plan Your Dream Green Space</h1>
        <div class="d-flex justify-content-center mt-4 mb-2">
            <a href="/signup" class="nav-link btn btn-primary text-white fw-bolder justify-self-center py-1 px-5" role="button" style="width: fit-content;"> Get Started</a>
        </div>
    </div>
    <main class="index-main container-fluid mx-0 px-0">
        <div id="mainCarousel" class="carousel slide bg-inverse w-100 ms-auto me-auto" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#mainCarousel" data-bs-slide-to="1"></li>
                <li data-bs-target="#mainCarousel" data-bs-slide-to="2"></li>
                <!-- <li data-bs-target="#mainCarousel" data-bs-slide-to="3"></li> -->
            </ol>
            <div class="carousel-inner bg-sheer-black" role="listbox">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-xl-9 mx-auto">
                            <img class="carousel-image" src="https://www.mainegardens.org/wp-content/uploads/2021/06/sm-CMBG-DSC-1877-1024x683.jpg" alt="First slide">
                            <div class="carousel-caption carousel-caption-bg">
                                <h2 class="text-capitalize fw-bold">organize plantings</h2>
                                <p class="text-capitalize title-font fs-5">group plants by growing location, <br> store garden details</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="row">
                        <div class="col-xl-9 mx-auto">
                            <img class="carousel-image" src="https://i.insider.com/5b2a856b5e48ec14098b4647?width=1200" alt="Second slide">
                            <div class="carousel-caption carousel-caption-bg">
                                <h2 class="text-capitalize fw-bold">catalog care</h2>
                                <p class="text-capitalize title-font fs-5">save plant details, care notes, <br> & preferred growing conditions</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-xl-9 mx-auto">
                            <img class="carousel-image" src="https://i.guim.co.uk/img/media/faa9a7312203b9824ff6856472d4f41c1747251e/6_0_3481_2090/master/3481.jpg?width=445&quality=45&auto=format&fit=max&dpr=2&s=7b0605ac95038c86ac6f710d0ec6bc37" alt="Third slide">
                            <div class="carousel-caption carousel-caption-bg">
                                <h2 class="text-capitalize fw-bold">create collections</h2>
                                <p class="text-capitalize title-font fs-5">gather favorite varieties, plot future seasons</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#mainCarousel" role="button" data-bs-slide="prev">
                <span class="fw-bold carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#mainCarousel" role="button" data-bs-slide="next">
                <span class="fw-bold carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
        
    </main>
    
</div>
    

<%- include('partials/footer') -%>