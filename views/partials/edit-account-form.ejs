<form class="needs-validation" action="/edit-account" method="POST" novalidate>
    <div class="form-floating has-validation mb-3">
        <input 
            type="text" 
            class="form-control" 
            id="userName" 
            name="editUserName" 
            value="<%= user.userName %>" 
            pattern="(?=.*[a-z])(?=.*[A-Z]).{6,20}" 
            title="6-20 characters including one uppercase and one lowercase letter" 
            required
        >
        <label for="userName" class="form-label"><i class="text-secondary far fa-user-circle fa-lg pe-2"></i>Username<span class="req-prop ps-1">*</span></label>
        <div id="usernameHelp" class="form-text">(Min 6 characters, including one uppercase and one lowercase letter)</div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">Please choose a username.</div>
    </div>
    <div class="form-floating has-validation mb-3">
        <input 
            type="email" 
            class="form-control" 
            id="emailInput" 
            name="editEmail" 
            value="<%= user.email %>" 
            aria-describedby="emailHelp" 
            required
        >
        <label for="emailInput" class="form-label"><i class="text-secondary far fa-envelope fa-lg pe-2"></i>Email Address<span class="req-prop ps-1">*</span></label>
    </div>
    <div class="form-floating has-validation mb-3">
        <input 
            type="password" 
            class="form-control" 
            id="currentPassword" 
            name="currentPassword" 
            placeholder="currentPassword" 
            aria-describedby="passwordHelp" 
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Password must be min 8 characters, including one capital letter, one lowercase letter, and one number." 
            required
        >
        <label for="password" class="form-label color-green"><i class="text-secondary fas fa-unlock-alt fa-lg pe-2"></i>Current Password</label>
    </div>

    <div id="passwordHelp" class="form-text">(Min 8 characters, including one uppercase, one lowercase, and one number)</div>
    <div class="form-floating has-validation mb-3">
        <input 
            type="password" 
            class="form-control" 
            id="newPassword" 
            name="newPassword" 
            placeholder="new password" 
            aria-describedby="passwordHelp" 
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Password must be min 8 characters, including one capital letter, one lowercase letter, and one number."
        >
        <label for="newPassword" class="form-label fst-italic">New Password</label>
    </div>
    <div class="form-floating has-validation mb-3">
        <input 
            type="password" 
            class="form-control" 
            id="confirmNewPassword" 
            name="confirmNewPassword" 
            placeholder="confirm password" 
            aria-describedby="confirmNewPassword" 
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
            title="Password must be 8-16 characters">
        <label for="confirmNewPassword" class="form-label fst-italic">Confirm New Password</label>
    </div>
    <div class="col-sm-4 offset-sm-8">
        <button type="submit" class="btn btn-primary fs-5" style="width: 100%;">Save</button>
    </div>
</form>