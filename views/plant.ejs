<%- include('partials/header') -%>
<div class="container-md">
    <div class="row justify-content-center my-2">
        <div class="col-lg-8 mb-5">
            <!-- Image Header -->
            <div class="image-card card img-fluid border-light">
                <img src="<%= plant.image %>" class="card-img plot-image" alt="Plant Image">
                <div class="d-flex align-items-end card-img-overlay p-0">
                    <div class="row d-flex justify-content-end head-overlay">                        
                        <div class="col-md-3 col-sm-5 col-6 bg-sheer-black overlay-right-hd pt-3 mt-4">
                            <a  class="text-white" style="text-decoration: none;" href="/plot/<%= plant.plotID %>">
                                <div class="d-flex justify-content-center">
                                    <span class="pe-2"><i class="fas fa-angle-up fa-lg"></i></span>
                                    <h6><span class="me-3">Plant Home</span></h6>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ------- -->
            <div class="row border-bottom border-1 p-0 m-0" style="height: 10px;"></div>
            <!-- ------- -->

            <div class="row gy-2 gx-3 my-4 mx-1">
                <div class="col-lg-4">
                    <!-- PLANT NAME -->
                    <div class="mb-4">
                        <h5 class="title-font-op text-uppercase"><%= plant.nameCommon %></h5>
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- SCI -->
                    <div class="mb-4">
                        <span class="label-text text-muted">Scientific Name</span>
                        <div>
                            <span><%= plant.nameSCI %></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row gy-2 gx-3 my-4 mx-1">
                    <!-- LIGHT -->
                <div class="col-sm-4">
                    <div>
                        <span class="label-text text-muted">Sun Exposure</span>
                    </div>
                    <div>
                        <span><i class="label-text text-muted fas fa-sun fa-lg pe-2"></i><%= plant.light %></span>
                    </div>
                </div>
                <!-- WATER -->
                <div class="col-sm-4">
                    <div>
                        <span class="label-text text-muted">Water Needs</span>
                    </div>
                    <div>
                        <span><i class="label-text text-muted fas fa-tint fa-lg pe-2"></i><%= plant.water %></span>
                    </div>
                </div>
                <!-- SOIL -->
                <div class="col-sm-4">
                    <div>
                        <span class="label-text text-muted">Soil Preference</span>
                    </div>
                    <div>
                        <span><i class="label-text text-muted fas fa-ellipsis-v fa-lg pe-2"></i><%= plant.soil %></span>
                    </div>
                </div>
            </div>

            <!-- ------- -->
            <div class="row border-bottom border-1 p-0 m-0" style="height: 10px;"></div>
            <!-- ------- -->

            <div class="row my-3 mx-1">
                <div class="col-sm-6">
                    <!-- HEIGHT -->
                    <div class="mb-3">
                        <div>
                            <span class="label-text text-muted">Growth Height</span>
                        </div>
                        <div>
                            <span><i class="label-text text-muted fas fa-arrows-alt-v fa-lg pe-3"></i><%= plant.height.min %><span class="px-2">-</span><%= plant.height.max %><span class="px-1"><%= plant.height.inc %></span> </span>
                        </div>
                    </div>
                    <!-- SPREAD -->
                    <div class="mb-3">
                        <div>
                            <span class="label-text text-muted">Spread</span>
                        </div>
                        <div>
                            <span><i class="label-text text-muted fas fa-arrows-alt-h fa-lg pe-3"></i><%= plant.spread.min %><span class="px-2">-</span><%= plant.spread.max %><span class="px-1"><%= plant.spread.inc %></span> </span>
                        </div>
                    </div>
                    <!-- ORIGIN -->
                    <div class="row">
                        <div class="col-lg-11">
                            <div class="mb-3">
                                <span class="label-text text-muted">Native Origin</span>
                                <div>
                                    <span><%= plant.nativeOrigin %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    
                <div class="col-sm-6 col-lg-5">
                    <!-- ZONE -->
                    <div class="row gx-3 mb-3">
                        <div>
                            <span class="label-text text-muted">USDA Hardiness Zone</span>
                        </div>
                        <div>
                            <span><i class="label-text text-muted fas fa-globe-americas fa-lg pe-2"></i><%= plant.zone.min %><span class="px-2">-</span><%= plant.zone.max %></span>
                        </div>
                    </div>
                    <!-- BLOOM SEASON -->
                    <div class="row gx-3">
                        <div>
                            <span class="label-text text-muted">Bloom Season</span>
                        </div>
                        <div>
                            <span><i class="label-text text-muted far fa-sun fa-lg pe-2"></i><%= plant.bloomSeason.start %><span class="px-2">-</span><%= plant.bloomSeason.end %></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ------- -->
            <div class="row border-bottom border-1 p-0 m-0" style="height: 10px;"></div>
            <!-- ------- -->

            <div class="row justify-content-between my-3 mx-1">
                
                <div class="col-sm-6">
                    <!-- PLANTING STATUS -->
                    <div>
                        <span class="label-text text-muted">Planting Status</span>
                    </div>
                    <div class="mb-3">
                        <span><i class="label-text text-muted fas fa-check fa-lg pe-2"></i><%= plant.planted.status %></span>
                    </div>
                    <!-- CURRENT HEALTH -->
                    <div>
                        <span class="label-text text-muted">Current Health</span>
                    </div>
                    <div class="mb-3">
                        <span><i class="label-text text-muted fas fa-smile fa-lg"></i><i class="label-text text-muted fas fa-sad-tear fa-lg pe-2"></i><%= plant.health %></span>
                    </div>
                    <!-- NOTES -->
                    <div>
                        <span class="label-text text-muted">Notes</span>
                    </div>
                    <div class="mb-3">  
                        <p>
                            <span><i class="label-text text-muted fas fa-pencil-alt fa-lg pe-2"></i></span><%= plant.notes %>
                        </p>
                    </div>
                </div>
                
                <div class="col-sm-6">
                    <!-- YEAR PLANTED -->
                    <div>
                        <span class="label-text text-muted">Year Planted</span>
                    </div>
                    <div class="mb-3">
                        <span><i class="label-text text-muted far fa-calendar-alt fa-lg pe-2"></i><%= plant.planted.year %>, <%= plant.planted.season %></span>
                    </div>
                    <!-- NUMBER OF PLANTS -->
                    <span class="label-text text-muted">Number of Plants</span>
                    <div class="col-6">
                        <div class="mb-3">
                            <span ><i class="label-text text-muted fas fa-seedling"></i><i class="label-text text-muted fas fa-seedling pe-2"></i></span>
                            <span><%= plant.numPlanted %></span>
                        </div>
                    </div>
                    <div class="col">
                        <!-- PESTS -->
                        <span class="label-text text-muted">Known Pests & Diseases</span>
                        <div>
                            <p>
                                <span class=""><i class="label-text text-muted fas fa-bug fa-lg"></i><i class="label-text text-muted fas fa-viruses fa-lg pe-2"></i></span><%= plant.pests %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Edit Plant & Compost Buttons -->
            <div class="g-3 mt-5 mx-3">
                
                <a class="btn btn-primary" href="/plant/<%= plant.id %>/edit" role="button"><i class="fas fa-edit fa-lg pe-2"></i>Edit Plant Details</a>
                
                
                <button 
                class="btn btn-warning" 
                data-bs-toggle="modal" 
                data-bs-target="#compost">
                <i class="fas fa-recycle pe-2"></i>Compost Plant</button>
                
            </div>
            <!-- ------- -->
            <div class="row border-bottom border-1 p-0 m-0 mb-4" style="height: 10px;"></div>
            <!-- ------- -->
        </div>
    </div>
</div>
<!-- Confirm Plant Compost Modal -->
<div class="modal fade" id="compost" tabindex="-1" aria-labelledby="compostLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title display-6 ps-4" id="compostLabel"><strong>Are You Sure?</strong></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
            <p class="p-4">
                Composting this plant will <strong>delete</strong> the plant record and all saved details.               
            </p>
            <p class=text-center>
                <em>(this action cannot be undone)</em>
            </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="fas fa-chevron-left pe-2"></i>Whoops! Don't Do It!</button>
                <form action="/plant/delete-plant/<%= plant.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-secondary" type="submit">Yes, I want to DELETE this plant<i class="fas fa-chevron-right ps-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>