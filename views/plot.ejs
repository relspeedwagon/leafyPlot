
<%- include('./partials/header.ejs'); -%>
<div class="container-md">
    <div class="row justify-content-center my-3">

        <div class="col-lg-10">
            <div class="px-2">
                <div class="image-card card img-fluid border-light">
                            
                    <img src="<%= plot.image %>" class="card-img plot-image" alt="User's Garden Plot">
                    
                    <div class="d-flex align-items-end card-img-overlay p-0">
                        <div class="d-flex justify-content-between row head-overlay">
                            <div class="col-6 bg-dark text-white overlay-left-hd ps-4 pt-3">
                                <h2 class="title-font text-uppercase mb-0"><%= plot.name %></h2>
                                <h4 class="title-font text-capitalize ps-2 mt-0"><%= plot.location %></h4>
                            </div>
                            
                            <div class="col-lg-3 col-5 d-flex bg-dark overlay-right-hd ps-3 pt-3 mt-4">
                                <a  class="text-white" style="text-decoration: none;" href="/profile">
                                    <div class="d-flex">
                                        <span class="pe-2 mt-1"><i class="fas fa-angle-up fa-lg"></i></span>
                                        <h5 class="mt-1"><span>Home</span></h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <section>
                <!-- ------- -->
                <div class="row border-bottom border-1 py-0 px-2 my-0 mx-2" style="height: 10px;"></div>
                <!-- ------- -->
    
                <div class="row mx-1 mt-3">
                    <div class="col ps-4">
                        <h5 class="title-font-op text-uppercase">Plot Details</h5>
                    </div>
                </div>

                <div class="row my-3 mx-1">
                    <div class="col ps-4">
                        <!-- year planted -->
                        <div>
                            <span class="label-text text-muted">Planting Year</span>
                        </div>
                        <div class="mb-4">
                            <span><i class="label-text text-muted far fa-calendar-alt fa-lg pe-2"></i><%= plot.seasonID %></span>
                        </div>
                        
                    </div>
                    <!-- light -->
                    <div class="col ps-4">
                        <div>
                            <span class="label-text text-muted">Average Sun</span>
                        </div>
                        <div>
                            <span><i class="label-text text-muted fas fa-sun fa-lg pe-2"></i><%= plot.avgSun %></span>
                        </div>
                    </div>
                    
                    <!-- soil -->
                    <div class="col ps-4">
                        <div>
                            <span class="label-text text-muted">Soil Type</span>
                        </div>
                        <div>
                            <span><i class="label-text text-muted fas fa-ellipsis-v fa-lg pe-2"></i><%= plot.soilType %></span>
                        </div>
                    </div>
                </div>
                <div class="row my-3 mx-1">
                    <div class="col ps-4">
                        <!-- zone -->
                        <div class="row gx-3 mb-3">
                            <div>
                                <span class="label-text text-muted"><a href="https://planthardiness.ars.usda.gov/PHZMWeb/" class="link-primary" target="_blank">USDA Hardiness Zone</a></span>
                            </div>
                            <div>
                                <span><i class="label-text text-muted fas fa-globe-americas fa-lg pe-2"></i><%= plot.zone %></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-8 ps-3">
                        <!-- notes -->
                        <div>
                            <span class="label-text text-muted">Notes</span>
                        </div>
                        <div class="mb-3">  
                            <p>
                                <span><i class="label-text text-muted fas fa-pencil-alt fa-lg pe-2"></i></span><%= plot.notes %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row mt-5 mb-2 mx-1">
                    <div class="">
                        <div class="">
                            <a class="btn btn-primary" href="/plot/<%= plot.id %>/edit" role="button"><i class="fas fa-pencil-alt fa-lg pe-2"></i>Edit Plot Details</a>
                        
                            <button 
                            class="btn btn-warning" 
                            data-bs-toggle="modal" 
                            data-bs-target="#startOver">
                            <i class="fas fa-recycle pe-2"></i>Compost Plot
                            </button>
                        </div>
                    </div>
                </div>
    
                <!-- ------- -->
                <div class="row border-bottom border-1 py-0 px-2 my-0 mx-2" style="height: 10px;"></div>
                <!-- ------- -->
            
                <!-- "season dropdown" "create a plot button" -->
                <div class="row mb-2 mt-5 mx-0 px-0">
                    <div class="col ps-4">
                        <h3 class="title-font-op text-uppercase">Plants</h3>
                    </div>
                    
                    <div class="col-lg-5 col-sm-7 py-0 px-2">
                        <button class="btn btn-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#plantForm" aria-expanded="false" aria-controls="plantForm">
                            <i class="fas fa-seedling fa-lg pe-2"></i>Add a Plant
                        </button>
                    </div>
                    
                </div>
                <!-- ------- -->
                <div class="row border-bottom border-1 py-0 px-2 my-0 mx-2" style="height: 10px;"></div>
                <!-- ------- -->
        
                <div class="collapse" id="plantForm">
                    <div class="card card-body">
                        <!-- form START -->
                        <%- include('./partials/create-plant-form.ejs'); -%>       
                        <!-- form END -->
                    </div>
                </div>
                
            </section>
            
            <div class="row justify-content-center m-0 p-0">
                <div class="col">
                    <!-- all plants for user-->
                    <section class="container-fluid p-0">
                        <div class="row row-xxl-cols-3 row-md-cols-2">
                            <% for(var i=0; i < plants.length; i++) {%>
                                
                                <div class="col-xxl-4 col-md-6 gx-3 gy-4">
                                    <a href="/plant/<%= plants[i]._id%>">
                                        <div class="image-card card img-fluid border-light">
                                            
                                            <img src="<%= plants[i].image %>" class="card-img plot-image" alt="User's Garden Plot">
                                            
                                            <div class="d-flex align-items-end card-img-overlay p-0">
                                                <div class="d-flex justify-content-between row p-overlay">
                                                    <div class="col-7 d-flex bg-dark text-white overlay-left ps-4">
                                                        <span class="doc-name align-self-center"> <%= plants[i].nameCommon %> </span>
                                                    </div>
                                                    <div class="col-3 d-flex bg-dark text-white overlay-right mt-2">
                                                        <span class="align-self-center"><i class="fas fa-angle-double-right fa-2x"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            <% } %>    
                        </div>
                    </section>
                </div>
            </div>

            <!-- ------- -->
            <div class="row border-bottom border-1 p-0 m-0 mb-5" style="height: 10px;"></div>
            <!-- ------- -->
                
        </div>
    </div>
</div>
<div class="modal fade" id="startOver" tabindex="-1" aria-labelledby="compostLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title display-6 ps-4" id="compostLabel"><strong>Are You Sure?</strong></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
            <p class="p-4">
                Composting this plot will <strong>delete</strong> all saved details <strong>and associated plants</strong>.               
            </p>
            <p class=text-center>
                <em>(this action cannot be undone)</em>
            </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="fas fa-chevron-left pe-2"></i>Whoops! Don't Do It!</button>
                <form action="/plot/delete-plot/<%= plot.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-secondary" type="submit">Yes, I want to DELETE this plot<i class="fas fa-chevron-right ps-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs'); -%>

<!-- footer -->