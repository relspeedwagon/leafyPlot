<%- include('./partials/header.ejs'); -%>

<div class="container bg-white">

    <div class="row" style="height: 4rem;">

    </div>

    <div class="row mb-2 mt-3 gx-3">
        <div class="col-sm-5 col-md-6">
            <h1 class="title-font-op text-uppercase">Plots</h1>
        </div>
        <div class="col-sm-7 col-md-6">
            <a class="btn btn-primary w-100" href="/start-plot" role="button"><i class="fas fa-tractor fa-lg pe-2"></i>Start a New Plot</a>
        </div>
        
        <!-- ------- -->
        <div class="row border-bottom border-1 py-0 px-2 my-0 mx-2" style="height: 10px;"></div>
        <!-- ------- -->
    
    </div>

    <% if ( plots.length == 0 ) {%>
        <div class="col">

            <div class="card placeholder-card border-light">
                <div class="d-flex p-0">
                    <div class="d-flex justify-content-between row plc-overlay">
                        <div class="col-2 d-flex justify-content-center bg-primary-sheer text-white py-2">
                            <span class="align-self-center"><i class="fas fa-tractor fa-3x"></i></span>
                        </div>
                        <div class="col text-dark ps-4 pe-5 py-4">
                            <span class="doc-name align-self-center"> Start A New Plot </span>
                            <p>
                                Get plotting!<span class="ps-1"></span> Plots can represent a specific growing location, garden bed, or group of indoor plantings (think "Kitchen Window Herb Garden" or "My Indoor Succulents").<span class="ps-1"></span> 
                                <br><br>
                                Saving a Plot allows you to add Plant records and save Plot details such as a growing zone (<span class="px-1"><a href="https://planthardiness.ars.usda.gov/" class="link-primary" target="_blank">USDA Plant Hardiness</a></span>), soil type, average sun exposure, and Plot location.<span class="ps-1"></span> Start one for an existing planting, or dream one up to get a jump on next season!
                            </p>
                        </div>
                        <div class="col-sm-1">

                        </div>
                    </div>
                </div>
            </div>

    </div>

    <% } %> 
    <% if ( plots.length > 0 ) {%>
        <!-- all plots for user-->
    <div class="container-fluid p-0">
        <div class="row row-md-cols-2 gx-3 gy-4 mb-5">
            <% for(var i=0; i < plots.length; i++) {%>
                
                <div class="col-lg-6">
                    <a href="/plot/<%= plots[i]._id%>">
                        <div class="image-card card img-fluid border-light">
                            
                            <img src="<%= plots[i].image %>" class="card-img plot-image" alt="User's Garden Plot">
                            
                            <div class="d-flex align-items-end card-img-overlay p-0">
                                <div class="d-flex justify-content-between row p-overlay">
                                    <div class="col-6 d-flex bg-sheer-black text-white overlay-left ps-4 py-2">
                                        <span class="doc-name align-self-center"> <%= plots[i].name %> </span>
                                    </div>
                                    <div class="col-3 d-flex justify-content-center bg-sheer-black text-white overlay-right mt-2 py-2">
                                        <span class="pe-2"><i class="fas fa-angle-double-right fa-lg"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>    
        </div>
    </div>
    <% } %> 

    <!-- -------------------------- -->
    <div class="row mb-2 mt-3 gx-3">
        <div style="height: 20px;"></div>
        <div class="col-md-6">
            <h1 class="title-font-op text-uppercase">Collections</h1>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary btn-alt w-100" href="/start-collection" role="button"><i class="fas fa-book-open fa-lg pe-2"></i>Add a Collection</a>
        </div>
        
        <!-- ------- -->
        <div class="row border-bottom border-1 py-0 px-2 my-0 mx-2" style="height: 10px;"></div>
        <!-- ------- -->
    
    </div>

    <% if ( colls.length == 0 ) {%>
        <div class="col">

                <div class="card placeholder-card border-light">
                    <div class="d-flex p-0">
                        <div class="d-flex justify-content-between row plc-overlay">
                            <div class="col-2 d-flex justify-content-center bg-alt-sheer text-white py-2">
                                <span class="align-self-center"><i class="fas fa-book-open fa-3x"></i></span>
                            </div>
                            <div class="col text-dark ps-4 py-4">
                                <span class="doc-name align-self-center"> Add A Collection </span>
                                <p>
                                    Create custom plant collections to save images of favorite plants and store growing details.<span class="ps-1"></span> Collections are ideal for saving plants by theme, such as grouping favorite cultivars, pairings for cut flower bouquets, or a list of "must haves" for future planting.<span class="ps-1"></span>  What makes a collection is up to you!  
                                </p>
                            </div>
                            <div class="col-sm-1">

                            </div>
                        </div>
                    </div>
                </div>

        </div>

    <% } %> 
    <% if ( colls.length > 0 ) {%>
        <!-- all collections for user-->
    <div class="container-fluid p-0">
        <div class="row row-md-cols-2 gx-3 gy-4 mb-5">
            <% for(var i=0; i < colls.length; i++) {%>
                
                <div class="col-lg-6">
                    <a href="coll/<%= colls[i]._id%>">
                        <div class="image-card card img-fluid border-light">
                            
                            <img src="<%= colls[i].image %>" class="card-img plot-image" alt="User's Garden Plot">
                            
                            <div class="d-flex align-items-end card-img-overlay p-0">
                                <div class="d-flex justify-content-between row p-overlay">
                                    <div class="col-6 d-flex bg-sheer-black text-white overlay-left ps-4 py-2">
                                        <span class="doc-name align-self-center"> <%= colls[i].name %> </span>
                                    </div>
                                    <div class="col-3 d-flex justify-content-center bg-sheer-black text-white overlay-right mt-2 py-2">
                                        <span class="pe-2"><i class="fas fa-angle-double-right fa-lg"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>    
        </div>
    </div>
    <% } %> 
    

</div>

<%- include('./partials/footer.ejs'); -%>