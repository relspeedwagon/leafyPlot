<%- include('./partials/header.ejs'); -%>

<div class="container mb-4">
    <div class="row justify-content-center mt-5 mb-1">
        <div class="col py-0 px-2">
            <h2 class="text-color-alt title-font-op text-uppercase ps-2">Start a Collection</h2>
        </div>
    </div>

    <form class="needs-validation" action="/plot/create-plot" enctype="multipart/form-data" method="POST" novalidate>
        <!-- coll name -->
        <div class="form-floating has-validation mb-3">
            <input type="text" class="form-control" id="plotName" name="plotName" placeholder="plot name" required>
            <label for="plotName">Collection Name<span class="req-prop ps-1">*</span></label>
            <div class="valid-feedback">
                * Required field, all set!
            </div>
            <div class="invalid-feedback">
                * Collection Name is required
            </div>
        </div>
        <!-- plot type -->
        <input type="hidden" id="plotType" name="plotType" value="collection">
        <!-- seasonID -->
        <input type="hidden" id="seasonID" name="seasonID" value="collection">

        <!-- short desc -->
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="description" name="description" placeholder="description">
            <label for="description">Short Description (i.e. "Peony varieties I love!")</label>
        </div>
        
        <div class="row g-3">
            <div class="">
                <!-- image -->
                <div><label for="imgUpload">Collection Profile Image<span class="req-prop ps-1">*</span></label></div>
                <div class="input-group has-validation mb-3">
                    <div class="input-group-text text-white" for="imgUpload"><i class="fas fa-image fa-lg"></i></div>
                    <input type="file" class="form-control" id="imageUpload" name="file" aria-label="image file" required>
                    <div class="valid-feedback">
                        * Required field, all set!
                    </div>
                    <div class="invalid-feedback">
                        * Collection Profile Image is required, please choose a file
                    </div>
                </div>
            </div>
            <div class="">
                <!-- notes -->
                <div>
                    <label for="notes" class="form-label">Notes</label>
                </div>
                <div class="input-group mb-3">  
                    <span class="input-group-text text-white"><i class="fas fa-pencil-alt fa-lg"></i></span>
                    <textarea class="form-control" id=notes name="notes" rows="4"></textarea>
                </div>
            </div>
        </div>

            <div class="mt-3">
                <!-- save/close -->
                <button class="btn btn-primary btn-alt" type="submit" value="Upload">Save and Exit</button>
                <a class="btn btn-secondary" href="/profile">Exit Without Saving</a>

                
            </div>
    </form>

</div>

<%- include('./partials/footer.ejs'); -%>